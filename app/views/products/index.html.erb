<p id="notice"><%= notice %></p>

<h1>Products</h1>

  <div class="container-fluid">
    <p>
      <%= link_to 'New Product', new_product_path, :class => "btn btn-success", :role => "button"  %>
    </p>
    <hr>
  </div>

<div class="container-fluid">

  <div class="row">
    <div class="col-4"><h5>Name</h5></div>
    <div class="col"><h5>Release date</h5></div>
    <div class="col"><h5>Price</h5></div>

    <div class="col-1"> </div>
    <div class="col-1"> </div>
    <div class="col-2"> </div>
  </div>
  <% @products.each do |product| %>
    <div class="row">
      <div class="col-4"><%= product.name %></div>
      <div class="col"><%= product.release_date %></div>
      <div class="col"><%= product.price %></div>

      <div class="col-1"> <%= link_to 'Show', product, :class => "btn btn-primary", :role => "button" %></div>
      <div class="col-1"> <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-primary", :role => "button" %></div>
      <div class="col-2"> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary", :role => "button" %></div>
    </div>
    <hr>
  <% end %>
</div>
